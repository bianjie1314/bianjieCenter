<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <!--数据库驱动，选择本地硬盘上的数据库驱动包，建议与pom.xml引入的jar包版本相同-->
    <classPathEntry
            location="D:\soft\profession\apache-maven\repository\mysql\mysql-connector-java\8.0.18\mysql-connector-java-8.0.18.jar"/>
    <context id="DB2Tables" targetRuntime="MyBatis3">
        <commentGenerator>
            <property name="suppressDate" value="true"/>
            <!--是否去除自动生成的注释，true：是  false：否-->
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>

        <!--数据库驱动类、链接url、用户名、密码，与application.yml配置相同即可-->
        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://47.103.220.93:3306/bianjiecenter?serverTimezone=GMT%2B8"
                        userId="root"
                        password="bianjie">
            <!-- 保证只生成自己需要的类,防止同一个用户下有多个库存在多个一样表,此处只生成videoVip的表 -->
            <property name="nullCatalogMeansCurrent" value="true"/>
        </jdbcConnection>

        <javaTypeResolver>
            <property name="forceBigDecimals" value="true"/>
        </javaTypeResolver>

        <!--生成实体类的包名和位置-->
        <javaModelGenerator targetPackage="com.bianjie.orm.pojo"
                            targetProject="src/main/java">
            <property name="enableSubPackages" value="false"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <!--生成映射文件的包名和位置-->
        <sqlMapGenerator targetPackage="mapper"
                         targetProject="src/main/resources">
            <property name="enableSubPackages" value="false"/>
        </sqlMapGenerator>

        <!--生成DAO的包名和位置-->
        <javaClientGenerator type="XMLMAPPER"
                             targetPackage="com.bianjie.orm.mapper"
                             targetProject="src/main/java">

            <property name="enableSubPackages" value="false"/>
        </javaClientGenerator>

        <!--需要自动生成代码的数据库表
         tableName表示数据库中的表名或视图名 domainObjectName表示实体类名-->
<!--        <table tableName="user" domainObjectName="USER"-->
<!--               enableCountByExample="false" enableUpdateByExample="false"-->
<!--               enableDeleteByExample="false" enableSelectByExample="false" selectByExampleQueryId="false"/>-->

<!--        <table tableName="phone_info"></table>-->
<!--        <table tableName="data_dictionary"></table>-->
<!--        <table tableName="request_router_log"></table>-->
                <table tableName="phone_package"></table>


    </context>
</generatorConfiguration>